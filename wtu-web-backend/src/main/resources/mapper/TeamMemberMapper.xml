<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.neorae.wtu.module.team.mapper.TeamMemberMapper">

    <resultMap id="BaseResultMap" type="cn.neorae.wtu.module.team.domain.TeamMember">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="teamUuid" column="team_uuid" jdbcType="VARCHAR"/>
            <result property="userUuid" column="user_uuid" jdbcType="VARCHAR"/>
            <result property="warframeId" column="warframe_id" jdbcType="INTEGER"/>
            <result property="focus" column="focus" jdbcType="VARCHAR"/>
            <result property="role" column="role" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,create_time,update_time,
        team_uuid,user_uuid,warframe_id,
        focus,is_deleted,role
    </sql>
    <insert id="saveBatch">
        insert into team_member
        (team_uuid,user_uuid,warframe_id,focus,role)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            #{item.teamUuid},#{item.userUuid},#{item.warframeId},#{item.focus},#{item.role}
        </foreach>
    </insert>
    <delete id="removeBatchByIds">
        delete from team_member
        where id in
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>


</mapper>
